    <link rel="stylesheet" href="~/Content/css/custom.css">
    <link rel="shortcut icon" href="~/Content/img/favicon.ico">

 


</head>
<body>
    <header class="header ">
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid d-flex align-items-center justify-content-between">
                <div class="navbar-header">
                    <a href="@Url.Action("Contacts", "PhoneBookHome")" class="navbar-brand">
                        <div class="brand-text brand-big visible text-uppercase"><strong class="text-primary">Phone</strong><strong>Book</strong></div>
                        <div class="brand-text brand-sm"><strong class="text-primary">P</strong><strong>B</strong></div>
